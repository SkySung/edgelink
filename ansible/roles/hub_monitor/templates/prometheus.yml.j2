global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'edge_nodes'
    scrape_interval: 5s
    static_configs:
      {% for host in groups['edges'] %}
      - targets: ['{{ hostvars[host]['vpn_ip'] | default('127.0.0.1') }}:8000']
        labels:
          instance: '{{ host }}'
      {% endfor %}